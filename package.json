{
  "name": "nytimes-kindle-fetch",
  "version": "1.0.0",
  "description": "Nodejs app template",
  "main": "main.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:prod": "rm -rf dist && tsc -p tsconfig.prod.json",
    "start": "npm run build && node dist/main.js",
    "start:debug": "node --inspect-brk=0.0.0.0:9229 dist/main.js",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:debug": "node --inspect -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage",
    "docker:build": "npm run build && docker build --build-arg NODE_VERSION=$(cat .nvmrc) -t $npm_package_name  .",
    "docker:tag": "docker image tag $npm_package_name:latest ghcr.io/tbhanson96/$npm_package_name:latest",
    "docker:push": "docker image push ghcr.io/tbhanson96/$npm_package_name:latest",
    "docker:start": "docker run -it -v `pwd`/out:/opt/app/mnt:Z $npm_package_name:latest",
    "docker:debug": "docker run -it -v `pwd`/out:/opt/app/mnt:Z -p 9229:9229 $npm_package_name:latest npm run start:debug",
    "package": "npm run build:prod && npm run docker:build",
    "deploy": "npm run docker:tag && npm run docker:push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tbhanson96/node-nytimes-kindle-fetch.git"
  },
  "author": "Tim Hanson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tbhanson96/node-nytimes-kindle-fetch/issues"
  },
  "homepage": "https://github.com/tbhanson96/node-nytimes-kindle-fetch#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/nodemailer": "^6.4.4",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "node-calibre": "^2.1.1",
    "nodemailer": "^6.7.2"
  }
}
